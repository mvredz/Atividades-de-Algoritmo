Algoritmo "semnome"
//Calcule e apresente o perímetro de um círculo: Perímetro = 3,1416 * D, onde D = 2 * R
Var

   raio:real
   diam:real
   peri:real

Inicio

   escreval("Informe o raio do círculo")
   leia(raio)

   diam <- 2*raio

   peri <- 3.1416 * diam

   escreval("O perímetro do círculo é",peri)

Fimalgoritmo